@import 'nib'

/*transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

transform()
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  transform arguments

transition-delay()
  -webkit-transition-delay arguments
  -moz-transition-delay arguments
  -o-transition-delay arguments
  transition-delay arguments*/

grey = #333
sidebarWidth = 160px

html,
body
  height 100%
  width 100%
  overflow hidden
  margin 0

[type=checkbox]:after
  content attr(value)
  position relative
  top 50%
  font-size 14px
  margin -7px 0 0 30px
  vertical-align top
  display inline-block
  white-space nowrap
  cursor pointer

.preload *
  transition none !important

#activity-name-and-color
  cursor pointer

#wrapper
  height 100%

  #slider
    background #999
    height 100%
    overflow hidden
    position relative

    #record-info
      position absolute
      display block
      z-index 2

      .modal-header
        text-align center

    #sliders
      overflow-x scroll
      position relative
      height 100%
      user-select none

      .current-time
        width 4px
        display block
        height 13%
        background grey
        z-index 1
        position absolute

      > div
        height 14.285%
        background #fff
        border-bottom solid 1px #ccc
        width 4320px
        position relative
        
        &:last-child
          border-bottom-color #fff
        
        &:nth-child(2n + 1)
          background #fdfdfd
      
      .time-indicators
        height 100%
        
        > span
          display block
          float left
          width 360px
          height 100%
          border-left 1px solid #ddd
          position relative
          color #ddd
          font-size 12px
          padding 0 0 0 10px
          margin 0 0 0 -1px
          
          &:after
            content attr(rel)
            position relative
            top 50%
            display block
            margin-top -6px
            height 12px

      .record-creater
        width 100%
        height 100%
        position absolute
        left 0
        top 0

      .record
        width 180px
        height 80%
        border-radius 0px
        position absolute
        top 10%
        transition height 0.1s linear, top 0.1s linear
        user-select none

        .drag-right,
        .drag-left
          position absolute
          width 20px
          z-index 1
          left 0
          top 0
          height 100%
          margin 0 0 0 -10px
          cursor ew-resize

        .drag-right
          left 100%
        
        .time
          width 100%
          font-size 18px
          line-height 36px
          position absolute
          top 50%
          margin-top -18px
          text-align center
          cursor pointer
          color #fff

    #time-teller
      position absolute
      display block
      width auto
      line-height 15px
      margin-top -65px
      pointer-events none
      padding 10px
      color #eee
      display block !important
      background #222
      transition opacity 0.1s linear, transform 0.1s cubic-bezier(0.590, -0.495, 0.490, 1.530)
      z-index 2
      transform-origin left bottom
      transform scale(1,1)
      
      &.ng-hide
        opacity 0
        transform scale(0.2,0.2)

      .arrow
        content ""
        position absolute
        top 100%
        left 0
        border 3px solid #222
        border-color #222 transparent transparent #222
        
        &.top
          top -6px !important
          border-color transparent transparent #222 #222

    #time-pointer
      background #222
      color #eee
      line-height 30px
      font-size 14px
      text-align center
      width 80px
      height: 30px;
      position absolute
      opacity 1
      left 0
      display block !important
      transform-origin right center
      transition opacity 0.1s linear, margin-top 0.1s linear, z-index linear 0s, transform 0.2s cubic-bezier(0.590, -0.495, 0.490, 1.530) 
      top 0
      z-index 2
      margin-top -15px
      transform-origin right center
      transform scale(1,1)

      &.ng-hide
        opacity 0
        // margin-top -10px
        transition opacity 0.1s linear, margin-top 0.1s linear, z-index linear 0.3s, transform 0.2s cubic-bezier(0.590, -0.495, 0.490, 1.530) 
        z-index 0
        transform scale(0.2,0.2)
      
      &.right 
        transform-origin left center

        .arrow
          left 0
          margin-left -10px
          border-color transparent
          border-right-color #222

      .arrow
        width 0
        height 0
        background transparent
        border 5px solid transparent
        border-left-color #222
        position absolute
        left 100%
        top 50%
        margin -5px 0 0 0

  #side
    float left
    width sidebarWidth
    background grey
    color #ccc
    position relative
    overflow-x hidden
    z-index 3
    overflow-y scroll
    height 100%
    padding 20px
    font-weight bold
    font-size 12px
    line-height 25px
    text-align left

    .heading
      display block
      margin 30px 0 0 0

    ul
      list-style none
      min-height 100%
      padding 0 0 60px 0
      margin 0

      li 
        margin-left -20px
        width sidebarWidth
        position relative

        &:after
          content ""
          display block
          width 0
          height 100%
          background #fff
          position absolute
          right 0
          opacity 0
          z-index -1
          top 0
          transition all 0.2s ease-in-out

        &.active:after
          opacity 1
          width 100%

        &.active a
          color #333

        a
          text-decoration none
          padding 5px 5px 5px 5px
          transition color 0.2s linear
          display block
          color #bbb
          margin 0 0 0 20px

          i
            width 15px
            text-align center
            font-size 16px
            margin-right 15px

    #logo
      height 70px
      width sidebarWidth
      background #229ACC
      display block
      margin -20px 0 -20px -20px
      color #000
      text-decoration none
      text-align center
      line-height 70px

    #profile
      text-align center
      margin-top 30px
      font-size 14px

      img
        border-radius 80px
        width 80px
        display block
        height 80px
        margin 0 auto 5px auto

    /*#logo
      margin -70px auto 0 auto
      padding 0
      display block

      img
        width 50px
        height 60px*/   

  #panel-container
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    display block !important
    transition z-index linear 0s
    z-index 2

    &.ng-hide
      transition-delay 0.1s
      z-index -2

      #panel-hider
        opacity 0

    #panel-hider
      background #000
      width inherit
      height inherit
      transition opacity 0.1s linear
      opacity 0.2
      position absolute
      left 0
      top 0

    .panel
      position absolute
      border-right solid 1px #999
      left sidebarWidth
      visibility visible
      height 100%
      background #fff
      padding 20px
      overflow scroll
      z-index 1
      display block !important
      transition opacity ease-in-out 0.2s, left ease-in-out 0.2s

      &.ng-hide
        left 0
        z-index 0
        opacity 0

      #groups-table,
      #clients-table
        margin-top 30px

        td
          padding-left 0
          padding-right 0

          &:first-child h5
            cursor help
            display inline
            
#activity-color
  display block
  width 18px
  height 18px
  border-radius 10px
  margin-right 15px

  &.large
    margin-top 11px

.table-no-border
  > thead, > tbody, > tfoot, > thead, > tbody, > tfoot
    > tr > td
       border-top none !important